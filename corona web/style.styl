// variables
color1=rgba(18,53,91,1)
color2=rgba(66,0,57,1)
color3=rgba(255,255,255,1)
color4=rgba(251,86,7,1)
color5=rgba(0,0,0,1)


*
  padding: 0
  margin: 0
  font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif
header
  .contenedor-nav
    background-color: color3
    box-shadow: 10px 10px 5px 0px rgba(0,0,0,0.75)
    -webkit-box-shadow:10px 10px 5px 0px rgba(0,0,0,0.75)
    -moz-box-shadow:10px 10px 5px 0px rgba(0,0,0,0.75)
    display: flex
    justify-content: space-between
    align-items: center;
    .logo
        height 15vh
      img
        height 15vh
    .nav 
      margin-right: 10px
      
      ul
        display: flex
        justify-content: space-evenly
        align-items: center
      li
        text-align: center
        list-style: none
        margin: 20px 0px 20px 20px
        a
          text-decoration: none
          color: color1
        a:hover
          text-decoration: underline
          text-decoration-color: color4

  .background
    .text-background
      position absolute
      top 50%
      left 50%
      transform: translate(-50%,-50%)
      text-align: center
      button 
        margin:20px
        padding: 10px
        border-radius: 10px
        border:none
        cursor pointer
        font-size: 20px
        outline: none
      button:hover
        background: color2
        color:color3
    h1
      text-align: center
      color: color3
      font-size: 60px
      text-shadow: 3px 3px color5
      font-weight: bold
      letter-spacing: 0.07em
    img
      width: 100%
      height 100vh
.main
  justify-content: space-evenly
  display flex
  .contenedor-informacion
    width: 35%
    .contenedor-img #ilustracion-doc
      width 100%
      height auto
      transform: translate(-7%, -40%)
    .quedate
      transform: translate(0%, -100%)
      #corazon
        fill: red
        position absolute
        width 10%
        transform: translate(-32%, -40%)
      img 
        width 10%
        
    .informacion
      border-radius: 10px
      width: 100%
      height:40vh
      background: linear-gradient(color2,color1)
      color: color3
      padding: 30px 40px
      transform: translate(-15%,-50%)
      justify-content: center
      h3
        margin: 10px 30px
        font-size: 35px 
  .contenedor-form
    margin-top: 5vh
    width: 50%
    h3
      text-align: center
      color: color1
      font-size: 30px
      margin: 1em
    input
      padding: 0.5em
      margin: 0 0 15px 0
      border-radius: 10px
      border-color: rgba(50,15,12,0.7)
      outline: none
    .container-dropdown
      margin-bottom: 20px
    .info-textos
      width: 100%
    label
      color:rgba(1,1,1,0.6)
    .dropdown
      margin-left: 30px
    textarea
      width: 100%
      border-radius: 10px
      outline-color: rgba(66,0,57,0.6)
    .contenedor-botones
      justify-content: space-between
      i
        position:absolute
        margin: 4px
      .boton-facebook:hover
        background color1
        color color3

      .boton-whatsapp:hover
        background:green
        color:color3
      .boton
        width:47%
        cursor: pointer
        margin-right: 10px
    

footer
  padding: 20px
  margin-top: 5vh
  background: color2
  height auto
  display: flex
  .contenedor-footer
    display: flex
    flex-direction: column 
    text-align: center
    justify-content: center
    width: 50%
  a
    margin: 15px
    text-decoration: none
    color:color3
    img
      width: 1em
      fill: white

